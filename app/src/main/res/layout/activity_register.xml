<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_smoke"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin_large"
        >

        <com.ascentbrezie.brezie.custom.CustomEditText
            android:id="@+id/number_edit_register_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large"
            android:hint="Number"
            android:background="@drawable/rounded_corners_edit_text"
            android:padding="@dimen/padding_small"
            android:inputType="number"
            />
        <com.ascentbrezie.brezie.custom.CustomEditText
            android:id="@+id/nick_name_edit_register_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_edit_text"
            android:padding="@dimen/padding_small"
            android:layout_margin="@dimen/margin_large"
            android:hint="Nick Name"
            />
        <com.ascentbrezie.brezie.custom.CustomEditText
            android:id="@+id/password_edit_register_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_edit_text"
            android:layout_margin="@dimen/margin_large"
            android:padding="@dimen/padding_small"
            android:hint="Password"
            android:inputType="textPassword"
            />
        <com.ascentbrezie.brezie.custom.CustomEditText
            android:id="@+id/confirm_password_edit_register_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corners_edit_text"
            android:layout_margin="@dimen/margin_large"
            android:padding="@dimen/padding_small"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            />
        <com.ascentbrezie.brezie.custom.CustomButton
            android:id="@+id/register_button_register_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:background="@drawable/custom_button"
            style="@style/button_style"
            android:layout_margin="@dimen/margin_large"
            android:textSize="@dimen/text_size_large"
            android:padding="@dimen/padding_small" />

    </LinearLayout>
</RelativeLayout>