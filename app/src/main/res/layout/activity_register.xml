<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cecece"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        >

        <com.ascentbrezie.brezie.custom.CustomEditText
            android:id="@+id/number_edit_register_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Number"
            android:background="@drawable/edittext_rounded_corners"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            android:inputType="number"
            />
        <com.ascentbrezie.brezie.custom.CustomEditText
            android:id="@+id/nick_name_edit_register_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rounded_corners"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:hint="Nick Name"
            />
        <com.ascentbrezie.brezie.custom.CustomEditText
            android:id="@+id/password_edit_register_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rounded_corners"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:hint="Password"
            android:inputType="textPassword"
            />
        <com.ascentbrezie.brezie.custom.CustomEditText
            android:id="@+id/confirm_password_edit_register_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rounded_corners"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            />
        <com.ascentbrezie.brezie.custom.CustomButton
            android:id="@+id/register_button_register_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:background="@drawable/custom_button"
            style="@style/button_style"
            android:layout_margin="10dp"
            android:textSize="@dimen/text_size_large"
            android:padding="5dp" />



    </LinearLayout>


</RelativeLayout>