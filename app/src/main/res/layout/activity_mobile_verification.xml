<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_smoke"
    android:padding="@dimen/padding_large">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@color/background_smoke"
        >


        <com.ascentbrezie.brezie.custom.CustomTextView
            android:id="@+id/number_edit_mobile_verification_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="MOBILE NUMBER"
            android:background="@drawable/rounded_corners_text_view"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_large"
            android:layout_margin="@dimen/margin_large" />
        <com.ascentbrezie.brezie.custom.CustomEditText
            android:id="@+id/otp_edit_mobile_verification_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large"
            android:background="@drawable/rounded_corners_edit_text"
            android:hint="One Time Password"
            android:padding="@dimen/padding_small"
            android:textSize="@dimen/text_size_large" />
        <com.ascentbrezie.brezie.custom.CustomButton
            android:id="@+id/verify_button_mobile_verification_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large"
            android:text="Verify"
            android:background="@drawable/custom_button"
            style="@style/button_style"
            android:textSize="@dimen/text_size_large"
            android:padding="@dimen/padding_large" />


    </LinearLayout>

</RelativeLayout>