<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cecece"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="cecece"
        >


        <com.ascentbrezie.brezie.custom.CustomTextView
            android:id="@+id/number_edit_mobile_verification_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MOBILE NUMBER"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_large"
            android:layout_margin="20dp" />
        <com.ascentbrezie.brezie.custom.CustomEditText
            android:id="@+id/otp_edit_mobile_verification_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edittext_rounded_corners"
            android:layout_weight="30dp"
            android:backgroundTint="#ffffff"
            android:hint="One Time Password"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="@dimen/text_size_large" />
        <com.ascentbrezie.brezie.custom.CustomButton
            android:id="@+id/verify_button_mobile_verification_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_gravity="center"
            android:text="Verify"
            android:background="@drawable/custom_button"
            style="@style/button_style"
            android:textSize="@dimen/text_size_large"
            android:padding="10dp" />


    </LinearLayout>

</RelativeLayout>