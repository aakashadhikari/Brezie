<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >


        <com.ascentbrezie.brezie.custom.CustomTextView
            android:id="@+id/number_edit_mobile_verification_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="MOBILE NUMBER"
            />
        <com.ascentbrezie.brezie.custom.CustomEditText
            android:id="@+id/otp_edit_mobile_verification_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="One Time Password"
            />
        <com.ascentbrezie.brezie.custom.CustomButton
            android:id="@+id/verify_button_mobile_verification_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Verify"
            />


    </LinearLayout>

</RelativeLayout>