<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_smoke"
    android:padding="@dimen/padding_small">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >


        <com.ascentbrezie.brezie.custom.CustomEditText
            android:id="@+id/number_edit_login_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large"
            android:background="@drawable/rounded_corners_edit_text"
            android:hint="Number"
            android:inputType="number"
            android:padding="@dimen/padding_small"
            android:textSize="@dimen/text_size_large" />
        <com.ascentbrezie.brezie.custom.CustomEditText
            android:id="@+id/password_edit_login_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large"
            android:background="@drawable/rounded_corners_edit_text"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="@dimen/padding_small" />

        <com.ascentbrezie.brezie.custom.CustomButton
            android:id="@+id/login_button_login_activity"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_large"
            android:text="Login"
            android:background="@drawable/custom_button"
            style="@style/button_style"
            android:textSize="@dimen/text_size_large"
            android:padding="@dimen/padding_large" />
            />

    </LinearLayout>


</RelativeLayout>