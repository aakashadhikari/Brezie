<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#e43f3f"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="#e43f3f"
        android:id="@+id/linearLayout">

        <com.ascentbrezie.brezie.custom.CustomButton
        android:id="@+id/login_button_login_or_register_activity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Login"
        android:layout_margin="@dimen/margin_large"
        android:textSize="@dimen/text_size_large"
        android:padding="@dimen/padding_large"
        android:background="#cc1d1d"
        android:textColor="#ffffff"/>
    <com.ascentbrezie.brezie.custom.CustomButton
        android:id="@+id/register_button_login_or_register_activity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Register"
        android:layout_margin="@dimen/margin_large"
        android:textSize="@dimen/text_size_large"
        android:padding="@dimen/padding_large"
        android:background="#cc1d1d"
        android:textColor="#ffffff"/>

    </LinearLayout>

    <ImageView android:src="@drawable/logo_with_name"
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="61dp" />

</RelativeLayout>