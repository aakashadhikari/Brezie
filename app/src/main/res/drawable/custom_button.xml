<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#05577f" />
            <stroke
                android:width="1dp"
                android:color="#1f2d3a" />
            <corners
                android:bottomRightRadius="20dip" android:bottomLeftRadius="20dip"
                android:topLeftRadius="20dip" android:topRightRadius="20dip" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#05577f"
                android:endColor="#1f2d3a"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#1f2d3a" />
            <corners
                android:bottomRightRadius="20dip" android:bottomLeftRadius="20dip"
                android:topLeftRadius="20dip" android:topRightRadius="20dip" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>